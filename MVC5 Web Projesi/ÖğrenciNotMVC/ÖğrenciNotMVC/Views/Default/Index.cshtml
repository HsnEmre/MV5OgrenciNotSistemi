@using ÖğrenciNotMVC.Models.EntityFramework
@model List<Tbl_Dersler>
@*kullanacağım modelleri ekledim üste*@


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>DERS ID</th>
        <th>DERS AD</th>
    </tr>
    <tbody>
        @*Foreach ile veri tabanından aldığım verileri listememe işlemi*@
        @foreach (var drs in Model)
        {
            <tr>
                <th>@drs.DERSID</th>
                <th>@drs.DERSAD</th>
            </tr>
        }
    </tbody>

</table>
@*Ders Kaydı oluşturmak için button*@
<a href="/Default/YeniDers" class="btn btn-primary">Yeni Ders Kaydı Oluştur</a>



